---
import NextIcon from "../icons/NextIcon.astro";
import TailwindIcon from "../icons/Tailwind.astro";
import RoundedButton from "../shared/RoundedButton.astro";
import GitHubIcon from "../icons/GitHub.astro";
import LinkIcon from "../icons/Link.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextIcon,
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-black text-white",
    icon: TailwindIcon,
  },
};

const PROJECTS = [
  {
    title: "E-Commerce for a pot store",
    description:
      "Full-stack e-commerce application built with Strapi CMS and Next.js, featuring product management and shopping cart functionality with Mercado Pago.",
    link: "https://tienda-macetas.vercel.app/",
    github: "https://github.com/LautaroRobayna/tienda-macetas",
    image: "/projects/svgl.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
];
---

<div class="grid gap-10 max-w-5xl w-full px-4">
  {
    PROJECTS.map(({ title, description, tags, image, github, link }) => (
      <article class="flex flex-col gap-5">
        <div class="flex flex-col gap-2">
          <h3 class="text-2xl md:text-3xl text-white font-semibold">{title}</h3>
          <p class="text-lg md:text-xl text-gray-300">{description}</p>
          <ul class="flex gap-2 list-none p-0 m-0 flex-wrap">
            {tags.map((tag) => (
              <li class="flex items-center gap-2 bg-black bg-opacity-60 text-white px-3 py-2 rounded-full text-sm md:text-base">
                <tag.icon class="w-4 h-4 md:w-5 md:h-5" />
                <span>{tag.name}</span>
              </li>
            ))}
          </ul>
        </div>
        <img
          class="w-full rounded-lg shadow-xl"
          src={image}
          alt={`Captura de pantalla del proyecto ${title}`}
        />
        <div class="flex gap-4 flex-wrap">
          <RoundedButton href={github} target="_blank" rel="noopener noreferrer">
            <GitHubIcon class="w-5 h-5" />
            Code
          </RoundedButton>
          <RoundedButton href={link} target="_blank" rel="noopener noreferrer">
            <LinkIcon class="w-5 h-5" />
            Preview
          </RoundedButton>
        </div>
      </article>
    ))
  }
</div>

