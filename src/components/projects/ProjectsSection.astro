---
import Projects from "./Projects.astro";
---

<section class="normal-section" id="projects">
  <div class="titles">
    <h1 class="cross-bar-glitch" data-slice="20">PROJECTS</h1>
  </div>
  <Projects />
</section>

<style>
/* Basic Layout del CodePen original */
.normal-section {
  display: grid;
  justify-items: center;
  gap: 0;
}

.titles {
  display: grid;
  justify-items: center;
  letter-spacing: 0.25em;
  margin-bottom: 20px;
}

.titles h1 {
  margin: 0;
  font-size: 32px;
  font-weight: 600;
  font-family: "Cinzel", serif;
}

.titles h2 {
  margin: 0;
  margin-bottom: -10px;
  font-size: 14px;
  font-weight: 600;
  text-transform: uppercase;
  font-family: "Cinzel", serif;
}

.description {
  display: grid;
  gap: 24px;
  width: 60vw;
  text-align: center;
}

.description p {
  margin: 0;
  font-family: "Inter Variable", system-ui, sans-serif;
  font-weight: 400;
  line-height: 1.6;
  font-size: 1rem;
}

/* Fade Up */
.fade-up {
  opacity: 0;
  transform: translateY(20%);
}

.fade-up.active {
  animation: fade-up 0.6s forwards;
}

@keyframes fade-up {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}


/* Staggered Rise In Text */
.staggered-rise-in {
  position: relative;
  display: flex;
  white-space: pre;
  overflow: hidden;
}

.staggered-rise-in span {
  transform: translateY(100%);
}

.staggered-rise-in.active span {
  animation: rise-in 1s forwards;
}

@keyframes rise-in {
  to {
    transform: translateY(-12%);
  }
}

@media screen and (max-width: 750px) {
  .description {
    width: 90vw;
  }
}
</style>

