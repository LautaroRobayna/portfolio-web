---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import CodeIcon from "../components/icons/Code.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Projects from "../components/Projects.astro";
---

<Layout
  title="Portfolio de Lautaro Robayna - Desarrollador y Programador Full Stack"
  description="Portfolio personal de Lautaro Robayna, un desarrollador Full Stack y Backend con experiencia en proyectos innovadores. Explora mis trabajos y habilidades."
>
  <main class="px-4">
    <SectionContainer class="mx-auto py-44">
      <h1
        class="lg:text-5xl md:text-4xl text-3xl font-bold flex flex-row gap-x-4 pb:6 lg:pb-10"
      >
        Hey, soy Lautaro<a
          href="https://www.linkedin.com/in/lautaro-robayna-505027313/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Disponible para trabajar </Badge>
        </a>
      </h1>
      <h2 class="text:xl lg:text-2xl text-wrap space-y-1 max-w-[700px]">
        <span class="block">Cursando 4to Año de Ingeniería en Sistemas.</span>
        <span class="text-blue-200/90">Desarrollador Full Stack y Backend.</span
        >
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill
          href="https://www.linkedin.com/in/lautaro-robayna-505027313/"
        >
          <LinkedInIcon class="size-4 lg:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/LautaroRobayna">
          <GitHubIcon class="size-4 lg:size-6" />
          GitHub
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>
